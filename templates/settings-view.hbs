<!-- Error Notification -->
<div class="error-overlay">
  <div class="error-heading">
    <span class="error-message">Oops! Your password is not strong enough.</span>
    <span class="error-close icon-x"></span>
  </div>
</div>
<div class="error-directions">
  <ul>
    <li>Make it at least 8 characters long.</li>
    <li>Include at least one number and one capital letter.</li>
  </ul>
  <div class="left-arrow"></div>
</div>



