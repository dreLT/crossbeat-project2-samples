  <form id="account-info" action="#" method="post">
    <section class="account-info">
      <h3>Account Information</h3>
      <fieldset>
        <p>
          <label for="name">First Name</label>
          <input type="text" id="fname" name="fname" value="{{first_name}}" maxlength="18">
          <span class="pencil icon-pencil2"></span>
        </p>
        <p>
          <label for="name">Last Name</label>
          <input type="text" id="lname" name="lname" value="{{last_name}}" maxlength="18">
          <span class="pencil icon-pencil2"></span>
        </p>
        <p>
          <label>Username</label>
          <input id="username" disabled="disabled" placeholder="{{user_name}}">
